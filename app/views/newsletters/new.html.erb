<div class="left_side_add_docs">  <div class="add_form">    <h4>Add a Newsletter</h4>    <%= form_for @newsletter, html: { multipart: true } do |f| %>      <div class="left">        <%= f.label :title, "Title:" %>      </div>      <div class="right">        <%= f.text_field :title, :placeholder => " Title of Newsletter" %><br>      </div>      <div class="left">        <%= f.label :month, "Month:" %>      </div>      <div class="right">        <%= f.text_field :month, :placeholder => " i.e. 'January'"%><br>      </div>      <div class="left">        <%= f.label :year, "Year:" %>      </div>      <div class="right">        <%= f.text_field :year, :placeholder => " Must be 4 digit year"%><br>      </div>      <div class="left">        <%= f.label :attachment, "File: " %>      </div>      <div class="right">        <%= f.file_field :attachment %>      </div>      <%= f.submit "Upload", class: "button" %>    <% end %>  </div>  <%- if !@newsletter.errors.empty? %>    <div class="alert-error">      <h1>&#42;&#42;Errors&#42;&#42;</h1>      <ul>        <%- @newsletter.errors.full_messages.each do |msg| %>          <li><%= msg %></li>        <%- end %>      </ul>    </div>  <%- end %></div><div class="right_column_fm">  <%= image_tag('holyfamily_pic.jpg', size: "474x270") %></div>