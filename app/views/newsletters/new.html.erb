<div class="left_side_add_docs">  <% if !@newsletter.errors.empty? %>  <div class="alert-error">    <h2>&#42;&#42;Error&#42;&#42;</h2>    <ul>      <% @newsletter.errors.full_messages.each do |msg| %>        <li><%= msg %></li>      <% end %>    </ul>  </div>    <h4>Add a newsletter</h4>  <% end %>  <div class="add_form">  <%= form_for @newsletter, html: { multipart: true } do |f| %>    <h4><%= @title %></h4>    <%= f.label :year, "Year:" %><%= f.text_field :year, :placeholder => "i.e. '1970'" %><br>    <%= f.label :month,"Month:" %><%= f.text_field :month, :placeholder => "i.e. 'January'" %><br>    <%= f.label :title,"Title:" %><%= f.text_field :title, :placeholder => "Name of Newsletter" %><br>    <%= f.label :attachment,"File:" %><%= f.file_field :attachment %><br><br>    <%= f.submit "Upload" %>  <% end %>  </div></div><div class="right_column_fm">  <%= image_tag('holyfamily_pic.jpg', size: "474x270") %></div>