<div class="left_side_add_docs">  <% if !@newsletter.errors.empty? %>  <div class="alert-error">    <h2>Error</h2>    <ul>      <% @newsletter.errors.full_messages.each do |msg| %>        <li><%= msg %></li>      <% end %>    </ul>  </div>  <h4>Add a newsletter</h4><% end %><div class="add_form">  <%= form_for @newsletter, html: { multipart: true } do |f| %>    <h4><%= @title %></h4>    <%= f.label :title,"Title:" %> <%= f.text_field :title %><br>    <%= f.label :month,"Month:" %> <%= f.text_field :month %><br>    <%= f.label :year, "Year:" %> <%= f.text_field :year %><br>    <%= f.label :attachment,"File:" %> <%= f.file_field :attachment %><br>    <%= f.submit "Upload File" %>  <% end %></div></div><div class="right_column_fm">  <%= image_tag('holyfamily_pic.jpg', size: "474x270") %></div>