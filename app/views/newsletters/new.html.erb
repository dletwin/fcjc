<div class="left_side_add_docs">  <div class="add_form">    <h4>Add a Newsletter</h4>    <%= form_for @newsletter, html: { multipart: true } do |f| %>      <div class="left">        <%= f.label :title, "Title:" %>      </div>      <div class="right">        <%= f.text_field :title, :placeholder => " Title of Newsletter" %><br>      </div>      <div class="left">        <%= f.label :month, "Month:" %>      </div>      <div class="right">        <%= select_tag "newsletter[month]" , options_for_select([['January', 'January'],['February','February'],          ['March','March'],['April','April'],['May','May'],['June','June'],['July','July'],['August','August'],          ['September','September'],['October','October'],['November','November'],          ['December','December']]) %><br>      </div>      <div class="left">        <%= f.label :year, "Year:" %>      </div>      <div class="right">        <%= select_year(Date.today, :start_year => Date.today.year,          :end_year => 4.year.from_now.year, field_name: 'year', :prefix => 'newsletter') %><br>      </div>      <div class="left">        <%= f.label :attachment, "File: " %>      </div>      <div class="right">        <%= f.file_field :attachment %>      </div>      <%= f.submit "Upload", class: "button" %>    <% end %>  </div>  <%- if !@newsletter.errors.empty? %>    <div class="alert-error">      <h1>&#42;&#42;Errors&#42;&#42;</h1>      <ul>        <%- @newsletter.errors.full_messages.each do |msg| %>          <li><%= msg %></li>        <%- end %>      </ul>    </div>  <%- end %></div><div class="right_column_fm">  <%= image_tag('holyfamily_pic.jpg', size: "474x270") %></div>